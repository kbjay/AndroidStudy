<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GradientBorderAndTranslateContentView">
        <attr name="borderStartColor" format="color"/>
        <attr name="borderEndColor" format="color"/>
        <attr name="contentColor" format="color"/>
        <attr name="corners" format="dimension"/>
        <attr name="gradientWidth" format="dimension"/>

        <attr name="type">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
            <enum name="tilt" value="2" />
        </attr>
    </declare-styleable>

</resources>